 ;; Evaluated Forms:
 (custom-theme-set-variables 'gpmacs
                             `(hl-paren-colors
                               '(,gpmacs-green
                                 ,gpmacs-red
                                 ,gpmacs-red
                                 ,gpmacs-orange))
                             `(ansi-color-names-vector
                               [,gpmacs-bg-primary
                                ,gpmacs-red
                                ,gpmacs-green
                                ,gpmacs-yellow
                                ,gpmacs-blue
                                ,gpmacs-purple
                                ,gpmacs-cyan
                                ,gpmacs-light])))

(provide-theme 'gpmacs)
(provide 'gpmacs-theme)
