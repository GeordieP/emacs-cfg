  (highlight (:background gpmacs-bg-primary-dark :foreground gpmacs-accent-light))
  (homoglyph (:foreground gpmacs-yellow))
  (match (:background gpmacs-med-gray))

  ;; isearch
  (isearch (:foreground gpmacs-accent-dark :background gpmacs-accent-light))
