 ;; Specifications:
 ((default (:background gpmacs-bg-primary :foreground gpmacs-fg-primary))
  (cursor (:background gpmacs-cursor))

  (mode-line (:box nil :foreground gpmacs-accent-light :background gpmacs-bg-primary-verydark))
  (mode-line-inactive (:box nil :foreground gpmacs-med-gray :background gpmacs-bg-primary-dark))
  (mode-line-buffer-id (:foreground gpmacs-fg-primary))

  (fringe (:background gpmacs-bg-primary))
  (hl-line (:background gpmacs-bg-primary-verydark))
  (region (:background gpmacs-bg-primary-light :foreground gpmacs-fg-primary-lighter))
  (secondary-selection (:background gpmacs-bg-primary-verydark :foreground gpmacs-accent-color))
  (minibuffer-prompt (:background gpmacs-bg-primary :foreground gpmacs-accent-color :bold t))
  (vertical-border (:foreground gpmacs-bg-primary-verydark))
  (window-divider (:foreground gpmacs-bg-primary-verydark))
  (link (:foreground gpmacs-blue :underline t))
  (shadow (:foreground gpmacs-grey))


  
  (font-lock-builtin-face (:foreground gpmacs-fg-primary))
  (font-lock-constant-face (:foreground gpmacs-fg-primary :bold t))
  (font-lock-string-face (:foreground gpmacs-accent-color))
  (font-lock-comment-face (:foreground gpmacs-med-gray))
  (font-lock-doc-face (:foreground gpmacs-med-gray))
  (font-lock-function-name-face (:foreground gpmacs-fg-primary-lighter :italic t))
  (font-lock-variable-name-face (:foreground gpmacs-accent-color :italic t))
  (font-lock-keyword-face (:foreground gpmacs-fg-primary-lighter))
  (font-lock-type-face (:foreground gpmacs-accent-color :italic t))
  (font-lock-warning-face (:foreground gpmacs-red-darker :bold t))

  ;; (show-paren-match (:foreground gpmacs-accent-color :background gpmacs-accent-light))
  (show-paren-match (:foreground gpmacs-accent-color :background gpmacs-accent-light :distant-foreground "#ff0000"))

  (hl-todo (:foreground gpmacs-accent-light :bold t))

